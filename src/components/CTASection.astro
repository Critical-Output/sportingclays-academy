---
interface Props {
  headline?: string;
  subtext?: string;
  ctaText?: string;
  ctaHref?: string;
  showGuarantee?: boolean;
}

const {
  headline = 'Ready to Transform Your Game?',
  subtext = 'Join thousands of shooters who have elevated their sporting clays performance with world-class instruction.',
  ctaText = 'Start Learning Today',
  ctaHref = '/pricing',
  showGuarantee = true,
} = Astro.props;
---

<section class="bg-gradient-to-b from-slate-900 to-slate-950 py-20">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">{headline}</h2>
    <p class="text-slate-400 text-lg mb-8 leading-relaxed">{subtext}</p>
    <a
      href={ctaHref}
      class="inline-block bg-amber-500 hover:bg-amber-400 text-slate-950 font-semibold text-lg px-8 py-4 rounded-xl transition-all duration-200 hover:shadow-lg hover:shadow-amber-500/20"
    >
      {ctaText}
    </a>
    {showGuarantee && (
      <p class="mt-6 text-slate-500 text-sm flex items-center justify-center gap-2">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        30-Day Money-Back Guarantee
      </p>
    )}
  </div>
</section>
