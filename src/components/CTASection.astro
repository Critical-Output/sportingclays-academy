---
interface Props {
  headline?: string;
  subtext?: string;
  ctaText?: string;
  ctaHref?: string;
  showGuarantee?: boolean;
}

const {
  headline = 'Ready to Transform Your Game?',
  subtext = 'Join thousands of shooters who have elevated their sporting clays performance with world-class instruction.',
  ctaText = 'Start Learning Today',
  ctaHref = '/pricing',
  showGuarantee = true,
} = Astro.props;
---

<section class="relative py-24 overflow-hidden">
  <!-- Background layers -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-900 to-slate-950"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_70%_60%_at_50%_110%,rgba(245,158,11,0.10),transparent)]"></div>
  <div class="absolute inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-slate-700 to-transparent"></div>

  <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-5 leading-tight">{headline}</h2>
    <p class="text-slate-300 text-lg mb-10 leading-relaxed">{subtext}</p>

    <a
      href={ctaHref}
      class="inline-flex items-center gap-2.5 bg-gradient-to-br from-amber-400 to-amber-500 hover:from-amber-300 hover:to-amber-400 text-slate-950 font-bold text-lg px-9 py-4 rounded-xl shadow-lg shadow-amber-500/40 hover:shadow-xl hover:shadow-amber-500/60 hover:-translate-y-1 transition-all duration-200"
    >
      {ctaText}
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>

    {showGuarantee && (
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-8">
        <div class="flex items-center gap-2 text-slate-400 text-sm">
          <svg class="w-4 h-4 text-emerald-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          30-Day Money-Back Guarantee
        </div>
        <div class="flex items-center gap-2 text-slate-400 text-sm">
          <svg class="w-4 h-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Instant Access
        </div>
        <div class="flex items-center gap-2 text-slate-400 text-sm">
          <svg class="w-4 h-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Cancel Anytime
        </div>
      </div>
    )}
  </div>
</section>
