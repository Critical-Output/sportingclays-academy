---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/courses', label: 'Video Library' },
  { href: '/about', label: 'Instructors' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/free-lesson', label: 'Free Lesson' },
];
---

<header id="site-header" class="fixed top-0 left-0 right-0 z-50">
  <!-- Announcement Bar -->
  <div class="bg-amber-500 h-10 flex items-center justify-center px-4 overflow-hidden">
    <p class="text-slate-950 text-xs sm:text-sm font-medium text-center">
      <span class="font-bold">New:</span> 2026 Jack Links Cup Champion: Gebben Miles — Karen interviews him the day after the win
      <a href="/courses" class="underline underline-offset-2 font-semibold hover:text-slate-800 transition-colors ml-1">
        Watch now →
      </a>
    </p>
  </div>

  <!-- Nav -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between bg-slate-950/90 backdrop-blur-lg border-b border-slate-800/50">
    <!-- Logo -->
    <a href="/" class="flex items-center group">
      <img src="/images/sca-logo.svg" alt="Sporting Clays Academy" class="h-8 w-auto group-hover:opacity-90 transition-opacity" />
    </a>

    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center gap-7">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-sm text-slate-300 hover:text-white transition-colors"
        >
          {link.label}
        </a>
      ))}
      <a
        href="/pricing"
        class="bg-gradient-to-br from-amber-400 to-amber-500 hover:from-amber-300 hover:to-amber-400 text-slate-950 font-bold text-sm px-5 py-2.5 rounded-lg shadow-md shadow-amber-500/40 hover:shadow-lg hover:shadow-amber-500/60 hover:-translate-y-0.5 transition-all duration-200"
      >
        Start Learning
      </a>
    </div>

    <!-- Mobile Menu Toggle -->
    <button
      id="mobile-menu-btn"
      class="md:hidden flex flex-col gap-1.5 cursor-pointer p-2 z-[70] relative"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <span id="ham-top" class="block w-6 h-0.5 bg-slate-300 transition-transform duration-300 origin-center"></span>
      <span id="ham-mid" class="block w-6 h-0.5 bg-slate-300 transition-opacity duration-300"></span>
      <span id="ham-bot" class="block w-6 h-0.5 bg-slate-300 transition-transform duration-300 origin-center"></span>
    </button>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="md:hidden"
      style="display:none; position:fixed; inset:104px 0 0 0; background:#020617; z-index:60; flex-direction:column; align-items:center; justify-content:flex-start; padding-top:2.5rem; gap:1.5rem; border-top:1px solid rgb(30 41 59);"
    >
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-lg text-white hover:text-amber-400 transition-colors"
        >
          {link.label}
        </a>
      ))}
      <a
        href="/pricing"
        class="bg-gradient-to-br from-amber-400 to-amber-500 hover:from-amber-300 hover:to-amber-400 text-slate-950 font-bold px-8 py-3 rounded-lg shadow-lg shadow-amber-500/40 hover:shadow-xl hover:shadow-amber-500/60 transition-all duration-200 mt-4"
      >
        Start Learning
      </a>

      <div style="position:absolute; bottom:2rem; color:rgb(71 85 105); font-size:0.75rem; text-align:center; padding:0 2rem;">
        30-Day Money-Back Guarantee • Cancel Anytime
      </div>
    </div>
  </nav>

  <script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const hamTop = document.getElementById('ham-top');
    const hamMid = document.getElementById('ham-mid');
    const hamBot = document.getElementById('ham-bot');
    let open = false;

    btn?.addEventListener('click', () => {
      open = !open;
      if (menu) {
        menu.style.display = open ? 'flex' : 'none';
      }
      btn?.setAttribute('aria-expanded', String(open));
      // Animate to X
      if (hamTop) hamTop.style.transform = open ? 'translateY(8px) rotate(45deg)' : '';
      if (hamMid) hamMid.style.opacity = open ? '0' : '1';
      if (hamBot) hamBot.style.transform = open ? 'translateY(-8px) rotate(-45deg)' : '';
    });

    // Close on nav link click
    menu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        open = false;
        if (menu) menu.style.display = 'none';
        btn?.setAttribute('aria-expanded', 'false');
        if (hamTop) hamTop.style.transform = '';
        if (hamMid) hamMid.style.opacity = '1';
        if (hamBot) hamBot.style.transform = '';
      });
    });
  </script>
</header>

<!-- Spacer: announcement bar (40px) + nav (64px) = 104px -->
<div class="h-[104px]"></div>
