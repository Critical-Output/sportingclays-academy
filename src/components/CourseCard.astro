---
interface Props {
  title: string;
  instructor: string;
  level: 'Beginner' | 'Intermediate' | 'Advanced' | 'All Levels' | 'Members Only';
  lessons: string;
  description: string;
  initials?: string;
}

const { title, instructor, level, lessons, description, initials = 'SCA' } = Astro.props;

const levelColors: Record<string, string> = {
  'Beginner': 'bg-emerald-500/10 text-emerald-400 border-emerald-500/20',
  'Intermediate': 'bg-amber-500/10 text-amber-400 border-amber-500/20',
  'Advanced': 'bg-red-500/10 text-red-400 border-red-500/20',
  'All Levels': 'bg-blue-500/10 text-blue-400 border-blue-500/20',
  'Members Only': 'bg-purple-500/10 text-purple-400 border-purple-500/20',
};
---

<div class="bg-slate-900 border border-slate-700 rounded-2xl overflow-hidden hover:-translate-y-1 hover:shadow-lg hover:shadow-slate-900/50 transition-all duration-300 group">
  <!-- Thumbnail Placeholder -->
  <div class="aspect-video bg-gradient-to-br from-slate-800 to-slate-900 flex items-center justify-center relative overflow-hidden">
    <span class="text-3xl font-bold text-slate-600 group-hover:text-slate-500 transition-colors">{initials}</span>
    <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent"></div>
  </div>

  <div class="p-5">
    <!-- Level Badge -->
    <span class:list={['inline-block text-xs font-medium px-2.5 py-1 rounded-full border mb-3', levelColors[level] || levelColors['All Levels']]}>
      {level}
    </span>

    <h3 class="text-lg font-semibold text-white mb-1 group-hover:text-amber-400 transition-colors">{title}</h3>
    <p class="text-slate-400 text-sm mb-3">with {instructor}</p>
    <p class="text-slate-400 text-sm leading-relaxed mb-4">{description}</p>

    <div class="flex items-center justify-between">
      <span class="text-slate-500 text-xs">{lessons}</span>
      <span class="text-amber-500 text-sm font-semibold group-hover:text-amber-400 transition-colors">
        Included in Membership &rarr;
      </span>
    </div>
  </div>
</div>
