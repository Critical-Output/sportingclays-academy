---
interface Props {
  quote: string;
  name: string;
  location: string;
  stars?: number;
  skillLevel?: string;
  improvement?: string;
}

const { quote, name, location, stars = 5, skillLevel, improvement } = Astro.props;
---

<div class="bg-slate-900 border border-slate-700 rounded-2xl p-6 flex flex-col gap-4 hover:-translate-y-1 hover:shadow-lg hover:shadow-slate-950/50 hover:border-slate-500 transition-all duration-300">
  <!-- Score improvement callout -->
  {improvement && (
    <div class="inline-flex items-center gap-2 bg-amber-500/10 border border-amber-500/20 rounded-lg px-3 py-1.5 self-start">
      <svg class="w-3.5 h-3.5 text-amber-400 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
      <span class="text-amber-400 text-xs font-bold tracking-wide">{improvement}</span>
    </div>
  )}

  <!-- Stars -->
  <div class="flex gap-0.5">
    {Array.from({ length: stars }).map(() => (
      <svg class="w-4 h-4 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>

  <!-- Quote -->
  <blockquote class="text-slate-300 text-sm leading-relaxed flex-1">
    "{quote}"
  </blockquote>

  <!-- Attribution -->
  <div class="border-t border-slate-700 pt-4">
    <p class="text-white font-semibold text-sm">{name}</p>
    <div class="flex items-center gap-2 mt-0.5 flex-wrap">
      <p class="text-slate-400 text-xs">{location}</p>
      {skillLevel && (
        <>
          <span class="text-slate-500 text-xs">Â·</span>
          <span class="text-slate-400 text-xs">{skillLevel}</span>
        </>
      )}
    </div>
  </div>
</div>
