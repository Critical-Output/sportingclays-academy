---
interface Props {
  quote: string;
  name: string;
  location: string;
  stars?: number;
}

const { quote, name, location, stars = 5 } = Astro.props;
---

<div class="bg-slate-900 border border-slate-700 rounded-2xl p-6 hover:-translate-y-1 hover:shadow-lg hover:shadow-slate-900/50 transition-all duration-300">
  <!-- Stars -->
  <div class="flex gap-1 mb-4">
    {Array.from({ length: stars }).map(() => (
      <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>

  <!-- Quote -->
  <blockquote class="text-slate-300 text-sm leading-relaxed mb-4">
    "{quote}"
  </blockquote>

  <!-- Attribution -->
  <div>
    <p class="text-white font-semibold text-sm">{name}</p>
    <p class="text-slate-500 text-xs">{location}</p>
  </div>
</div>
