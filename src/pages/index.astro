    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 bg-slate-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">What Members Are Saying</h2>
        <p class="text-slate-400">Real results from shooters across skill levels.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {testimonials.map((testimonial) => (
          <TestimonialCard {...testimonial} />
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-16 bg-slate-900/40">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-10">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Frequently Asked Questions</h2>
      </div>

      <div class="space-y-4">
        {faqItems.map((item) => (
          <FAQItem question={item.question} answer={item.answer} />
        ))}
      </div>
    </div>
  </section>

  <CTASection
    headline="Ready to Transform Your Game?"
    subtext="Get instant access and start training with a complete system built by world champions."
    ctaText="Join Sporting Clays Academy"
    ctaHref="/checkout"
  />

  <!-- Mobile sticky CTA -->
  <div class="fixed bottom-0 inset-x-0 p-4 bg-slate-950/90 backdrop-blur-lg border-t border-slate-800 md:hidden z-40">
    <a href="/pricing" class="block w-full bg-amber-500 hover:bg-amber-400 text-slate-950 font-semibold text-center py-3 rounded-xl transition-colors">
      Start Learning Today
    </a>
  </div>
</BaseLayout>
