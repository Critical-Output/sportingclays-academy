---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';

// Fetch courses from the Platform API
const apiUrl = 'https://api.pursuitshq.com/api/courses';
let courses: any[] = [];
let error: string | null = null;

try {
  const response = await fetch(apiUrl, {
    headers: {
      'BRAND_SLUG': 'sca',
    },
  });
  
  if (response.ok) {
    const data = await response.json();
    courses = data.courses || [];
  } else {
    error = `API returned ${response.status}`;
    console.error('Failed to fetch courses:', error);
  }
} catch (e) {
  error = e instanceof Error ? e.message : 'Unknown error';
  console.error('Error fetching courses:', e);
}

// Calculate stats
const totalLessons = courses.reduce((sum, c) => sum + (c.lesson_count || 0), 0);
const totalModules = courses.reduce((sum, c) => sum + (c.module_count || 0), 0);

// Accent colors for course cards
const accentColors = ['amber', 'blue', 'emerald', 'violet', 'rose', 'cyan', 'orange'];
const accentMap: Record<string, { bg: string; text: string; border: string }> = {
  amber: { bg: 'bg-amber-500/10', text: 'text-amber-400', border: 'border-amber-500/20' },
  blue: { bg: 'bg-blue-500/10', text: 'text-blue-400', border: 'border-blue-500/20' },
  emerald: { bg: 'bg-emerald-500/10', text: 'text-emerald-400', border: 'border-emerald-500/20' },
  violet: { bg: 'bg-violet-500/10', text: 'text-violet-400', border: 'border-violet-500/20' },
  rose: { bg: 'bg-rose-500/10', text: 'text-rose-400', border: 'border-rose-500/20' },
  cyan: { bg: 'bg-cyan-500/10', text: 'text-cyan-400', border: 'border-cyan-500/20' },
  orange: { bg: 'bg-orange-500/10', text: 'text-orange-400', border: 'border-orange-500/20' },
};

// Map courses to display format with rotating accent colors
const displayCourses = courses.map((course, idx) => ({
  ...course,
  accent: accentColors[idx % accentColors.length],
  thumbnail: course.thumbnail_url || '/images/thumbnails/crossing-looper.jpg',
  thumbAlt: course.title,
  freePreviewCount: course.free_preview_count || 0,
  membersOnlyCount: (course.lesson_count || 0) - (course.free_preview_count || 0),
}));
---

<BaseLayout
  title="Video Library | Sporting Clays Academy"
  description="Browse instructional videos from world champions Karen and Gebben Miles. Target breakdowns, fundamentals, competition analysis, mental game, and more."
>

  <!-- Header -->
  <section class="bg-gradient-to-b from-slate-950 to-slate-900 py-16 sm:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4">
        {totalLessons > 0 ? `${totalLessons} Videos` : 'Video Library'}. Expert Instruction.
      </h1>
      <p class="text-slate-300 text-lg max-w-2xl mx-auto">
        {courses.length > 0 
          ? `${courses.length} courses covering every dimension of the sport — from target-by-target breakdowns to mental game, competition analysis, and structured drills.`
          : 'Comprehensive shooting instruction from world champions Karen and Gebben Miles.'
        }
        One membership unlocks everything.
      </p>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="bg-slate-900 border-y border-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-2xl font-bold text-amber-500">{totalLessons}</div>
          <div class="text-slate-400 text-xs mt-1">Videos in Library</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-amber-500">{courses.length}</div>
          <div class="text-slate-400 text-xs mt-1">Content Categories</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-amber-500">Weekly</div>
          <div class="text-slate-400 text-xs mt-1">New Releases</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-amber-500">2</div>
          <div class="text-slate-400 text-xs mt-1">World-Class Instructors</div>
        </div>
      </div>
    </div>
  </section>

  {error && (
    <section class="py-8 bg-slate-950">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-rose-500/10 border border-rose-500/20 rounded-xl p-4">
          <p class="text-rose-400 text-sm">⚠️ Unable to load courses: {error}</p>
        </div>
      </div>
    </section>
  )}

  <!-- Courses Grid -->
  <section class="py-12 sm:py-16 bg-slate-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {displayCourses.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-slate-400">No courses available yet. Check back soon!</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {displayCourses.map((course) => {
            const colors = accentMap[course.accent] || accentMap.amber;
            return (
              <article class="bg-slate-900 border border-slate-700 rounded-2xl overflow-hidden hover:-translate-y-1 hover:shadow-lg hover:shadow-slate-950/70 transition-all duration-300 flex flex-col">
                <div class="aspect-video bg-gradient-to-br from-slate-800 to-slate-900 relative overflow-hidden">
                  <img 
                    src={course.thumbnail} 
                    alt={course.thumbAlt} 
                    class="absolute inset-0 w-full h-full object-cover" 
                    loading="lazy" 
                  />
                  <span class:list={[
                    'absolute top-3 right-3 text-xs font-semibold px-2.5 py-1 rounded-full border',
                    colors.bg,
                    colors.text,
                    colors.border
                  ]}>
                    {course.lesson_count || 0} videos
                  </span>
                  {course.freePreviewCount > 0 && (
                    <span class="absolute top-3 left-3 text-xs font-semibold px-2.5 py-1 rounded-full bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
                      {course.freePreviewCount} Free Preview
                    </span>
                  )}
                </div>

                <div class="p-5 flex flex-col flex-1">
                  <p class:list={[
                    'text-xs font-semibold uppercase tracking-widest mb-1.5',
                    colors.text
                  ]}>
                    {course.level ? course.level.charAt(0).toUpperCase() + course.level.slice(1) : 'All Levels'}
                  </p>
                  <h3 class="text-lg font-semibold text-white mb-2">{course.title}</h3>
                  <p class="text-slate-300 text-sm leading-relaxed mb-4 flex-1">
                    {course.description || 'Expert instruction from Karen and Gebben Miles.'}
                  </p>
                  <div class="flex items-center justify-between">
                    <span class="text-slate-500 text-xs">
                      {course.freePreviewCount > 0 
                        ? `${course.freePreviewCount} free, ${course.membersOnlyCount} members-only`
                        : `${course.lesson_count || 0} lessons`
                      }
                    </span>
                    {course.membersOnlyCount > 0 ? (
                      <span class="text-amber-500 text-sm font-medium flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                        Subscribe to Watch
                      </span>
                    ) : (
                      <span class="text-emerald-500 text-sm font-medium">Browse →</span>
                    )}
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      )}
    </div>
  </section>

  <!-- Browse by Level -->
  <section class="py-12 sm:py-16 bg-slate-900 border-t border-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <h2 class="text-2xl sm:text-3xl font-bold text-white">Browse by Skill Level</h2>
        <p class="text-slate-400 mt-2 text-sm">Find courses matched to your experience level.</p>
      </div>
      <div class="flex flex-wrap gap-3">
        {['beginner', 'intermediate', 'advanced', 'all'].map((level) => {
          const count = courses.filter(c => c.level === level).length;
          return count > 0 ? (
            <div class="flex items-center gap-2.5 bg-slate-800 border border-slate-700 hover:border-amber-500/40 hover:bg-slate-750 rounded-xl px-4 py-3 transition-all duration-200 cursor-default group">
              <span class="text-white font-medium text-sm group-hover:text-amber-400 transition-colors">
                {level.charAt(0).toUpperCase() + level.slice(1)}
              </span>
              <span class="bg-slate-700 text-amber-500 text-xs font-bold px-2 py-0.5 rounded-full">{count}</span>
            </div>
          ) : null;
        })}
      </div>
    </div>
  </section>

  <CTASection
    headline="Get Access to the Full Library"
    subtext={`One membership unlocks all ${totalLessons} videos, every course, and every new episode the moment it drops.`}
    ctaText="View Membership Plans"
    ctaHref="/pricing"
  />

  <!-- Mobile Sticky CTA -->
  <div class="fixed bottom-0 inset-x-0 p-4 bg-slate-950/90 backdrop-blur-lg border-t border-slate-800 md:hidden z-40">
    <a href="/pricing" class="block w-full bg-gradient-to-br from-amber-400 to-amber-500 hover:from-amber-300 hover:to-amber-400 text-slate-950 font-bold text-center py-3 rounded-xl shadow-lg shadow-amber-500/40 transition-all duration-200">
      Get Full Access
    </a>
  </div>

</BaseLayout>
