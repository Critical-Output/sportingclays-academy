---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';

const series = [
  {
    title: 'From the Range',
    category: 'On-Range Instruction',
    videoCount: '60+',
    description: 'Real-time target breakdowns filmed live on the range. Gebben and Karen analyze presentations, walk through hold points, and demonstrate technique at actual stations.',
    initials: 'FR',
    accent: 'amber',
    latest: 'New episode every week',
    thumbnail: '/images/thumbnails/crossing-looper.jpg',
    thumbAlt: 'Gebben and Karen on-range target breakdown',
  },
  {
    title: 'Gebben Miles Basics',
    category: 'Fundamentals',
    videoCount: '35+',
    description: 'The complete foundation series. Stance, mount, swing mechanics, follow-through, and the core visual process that every consistent shooter must master.',
    initials: 'GMB',
    accent: 'blue',
    latest: 'Complete series',
    thumbnail: '/images/thumbnails/laser-swing.jpg',
    thumbAlt: 'Gebben Miles basics series — fundamentals instruction',
  },
  {
    title: 'Quiet Dust Shooting',
    category: 'Advanced Technique',
    videoCount: '40+',
    description: "Gebben Miles' original advanced series. Deep dives into target reading, lead management, and the nuanced adjustments that separate good shooters from great ones.",
    initials: 'QDS',
    accent: 'emerald',
    latest: 'Ongoing',
    thumbnail: '/images/thumbnails/anticipation.jpg',
    thumbAlt: 'Quiet Dust Series — advanced sporting clays technique',
  },
  {
    title: 'Joseph Fanizzi Series',
    category: 'Guest Coaching',
    videoCount: '30+',
    description: 'Station-by-station course analysis and coaching with elite competitor Joseph Fanizzi. Tournament-level strategy from one of the best in the game.',
    initials: 'FS',
    accent: 'violet',
    latest: 'Updated after major events',
    thumbnail: '/images/thumbnails/chandelle-2.jpg',
    thumbAlt: 'Joseph Fanizzi guest coaching series',
  },
  {
    title: 'Homeschool',
    category: 'Drills & Practice',
    videoCount: '25+',
    description: 'Structured practice sessions designed for the range. Specific drills for crossers, teal, rabbits, chandelles, and more — with clear improvement benchmarks.',
    initials: 'HS',
    accent: 'rose',
    latest: 'Ongoing',
    thumbnail: '/images/thumbnails/hold-point.jpg',
    thumbAlt: 'Homeschool drill series — sporting clays practice',
  },
  {
    title: 'Webinars & Live Q&A',
    category: 'Interactive Sessions',
    videoCount: '30+',
    description: 'Recorded live sessions where Karen and Gebben answer member questions, review submitted footage, and go deep on strategy with the SCA community.',
    initials: 'LIVE',
    accent: 'cyan',
    latest: 'Monthly live sessions',
    thumbnail: '/images/thumbnails/slow-crosser.jpg',
    thumbAlt: 'SCA live webinar — Q&A with Gebben and Karen Miles',
  },
  {
    title: 'Competition Analysis',
    category: 'Tournament Coverage',
    videoCount: '20+',
    description: 'Gebben and Karen break down their own competition footage — what worked, what didn\'t, and what you can learn from watching champions compete under pressure.',
    initials: 'CA',
    accent: 'orange',
    latest: 'After major events',
    thumbnail: '/images/thumbnails/tricky-pair.jpg',
    thumbAlt: 'Gebben and Karen competition footage analysis',
  },
];

const accentMap: Record<string, { bg: string; text: string; border: string }> = {
  amber: { bg: 'bg-amber-500/10', text: 'text-amber-400', border: 'border-amber-500/20' },
  blue: { bg: 'bg-blue-500/10', text: 'text-blue-400', border: 'border-blue-500/20' },
  emerald: { bg: 'bg-emerald-500/10', text: 'text-emerald-400', border: 'border-emerald-500/20' },
  violet: { bg: 'bg-violet-500/10', text: 'text-violet-400', border: 'border-violet-500/20' },
  rose: { bg: 'bg-rose-500/10', text: 'text-rose-400', border: 'border-rose-500/20' },
  cyan: { bg: 'bg-cyan-500/10', text: 'text-cyan-400', border: 'border-cyan-500/20' },
  orange: { bg: 'bg-orange-500/10', text: 'text-orange-400', border: 'border-orange-500/20' },
};
---

<BaseLayout
  title="Video Library | Sporting Clays Academy"
  description="Browse 240+ instructional videos across 7 series from world champions Karen and Gebben Miles. New lessons added weekly."
>

  <!-- Header -->
  <section class="bg-gradient-to-b from-slate-950 to-slate-900 py-16 sm:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4">240+ Videos. New Lessons Weekly.</h1>
      <p class="text-slate-300 text-lg max-w-2xl mx-auto">
        Organized across 7 series covering everything from fundamentals to competition strategy.
        One membership unlocks the entire library — plus every new video the moment it drops.
      </p>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="bg-slate-900 border-y border-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-2xl font-bold text-amber-500">240+</div>
          <div class="text-slate-400 text-xs mt-1">Videos in Library</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-amber-500">7</div>
          <div class="text-slate-400 text-xs mt-1">Content Series</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-amber-500">Weekly</div>
          <div class="text-slate-400 text-xs mt-1">New Releases</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-amber-500">2</div>
          <div class="text-slate-400 text-xs mt-1">World Champion Instructors</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Series Grid -->
  <section class="py-12 sm:py-16 bg-slate-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {series.map((s) => {
          const colors = accentMap[s.accent] || accentMap.amber;
          return (
            <article class="bg-slate-900 border border-slate-700 rounded-2xl overflow-hidden hover:-translate-y-1 hover:shadow-lg hover:shadow-slate-950/70 transition-all duration-300 flex flex-col">
              <div class="aspect-video bg-gradient-to-br from-slate-800 to-slate-900 relative overflow-hidden">
                <img src={s.thumbnail} alt={s.thumbAlt} class="absolute inset-0 w-full h-full object-cover" loading="lazy" />
                <span class:list={['absolute top-3 right-3 text-xs font-semibold px-2.5 py-1 rounded-full border', colors.bg, colors.text, colors.border]}>
                  {s.videoCount} videos
                </span>
              </div>
              
              <div class="p-5 flex flex-col flex-1">
                <p class:list={['text-xs font-semibold uppercase tracking-widest mb-1.5', colors.text]}>
                  {s.category}
                </p>
                <h3 class="text-lg font-semibold text-white mb-2">{s.title}</h3>
                <p class="text-slate-300 text-sm leading-relaxed mb-4 flex-1">{s.description}</p>
                <div class="flex items-center justify-between">
                  <span class="text-slate-500 text-xs">{s.latest}</span>
                  <span class="text-amber-500 text-sm font-medium">Browse →</span>
                </div>
              </div>
            </article>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Recent Releases -->
  <section class="py-12 sm:py-16 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-white mb-8">Latest Releases</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
        {[
          { title: '2026 Jack Links Cup Champion: Gebben Miles', series: 'Competition Analysis', duration: '18:24', thumbnail: '/images/thumbnails/chandelle-angle.jpg', thumbAlt: 'Gebben Miles the day after winning the 2026 Jack Links Cup' },
          { title: 'Low Rib vs High Rib', series: 'From the Range', duration: '12:37', thumbnail: '/images/thumbnails/tricky-pair.jpg', thumbAlt: 'Gebben and Karen compare low rib vs high rib Blaser FBX' },
          { title: 'Why Blaser FBX?', series: 'From the Range', duration: '15:02', thumbnail: '/images/thumbnails/blaser-fbx.jpg', thumbAlt: 'Gebben and Karen explain the switch from Krieghoff to Blaser FBX' },
          { title: 'Season Prep 2026', series: 'From the Range', duration: '11:22', thumbnail: '/images/thumbnails/season-prep.jpg', thumbAlt: 'Gebben and Karen share 2026 season preparations' },
        ].map((ep) => (
          <div class="bg-slate-900 border border-slate-700 rounded-xl overflow-hidden hover:-translate-y-1 transition-all duration-300">
            <div class="aspect-video relative overflow-hidden">
              <img src={ep.thumbnail} alt={ep.thumbAlt} class="absolute inset-0 w-full h-full object-cover" loading="lazy" />
              <button class="absolute inset-0 flex items-center justify-center">
                <div class="w-12 h-12 rounded-full bg-amber-500/80 flex items-center justify-center">
                  <svg class="w-5 h-5 ml-0.5 text-slate-950" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z" /></svg>
                </div>
              </button>
              <span class="absolute bottom-2 right-2 text-xs text-white bg-black/60 px-2 py-0.5 rounded">{ep.duration}</span>
            </div>
            <div class="p-4">
              <p class="text-amber-500 text-xs font-medium mb-1">{ep.series}</p>
              <h4 class="text-white text-sm font-medium leading-snug">{ep.title}</h4>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTASection
    headline="Get Access to the Full Library"
    subtext="One membership unlocks 240+ videos, every series, and every new episode the moment it drops."
    ctaText="View Membership Plans"
    ctaHref="/pricing"
  />

  <!-- Mobile Sticky CTA -->
  <div class="fixed bottom-0 inset-x-0 p-4 bg-slate-950/90 backdrop-blur-lg border-t border-slate-800 md:hidden z-40">
    <a href="/pricing" class="block w-full bg-gradient-to-br from-amber-400 to-amber-500 hover:from-amber-300 hover:to-amber-400 text-slate-950 font-bold text-center py-3 rounded-xl shadow-lg shadow-amber-500/40 transition-all duration-200">
      Get Full Access
    </a>
  </div>

</BaseLayout>
